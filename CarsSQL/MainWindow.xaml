<Window x:Class="CarsSQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarsSQL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RadioButton x:Name="rbMarka" Content="Marka" GroupName="SearchOption" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <RadioButton x:Name="rbModel" Content="Model" GroupName="SearchOption" Margin="80,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBox x:Name="txtSearch" Margin="10,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"/>

        <Button Content="Search" Click="SearchButton_Click" Margin="220,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <ListBox x:Name="lstResults" Margin="10,80,10,10"/>
    </Grid>
</Window>
